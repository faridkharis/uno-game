@model GameViewModel

@{
  ViewData["Title"] = "Game Board";
}

<h2 style="text-align: center;">UNO Game Board</h2>
<h5 style="text-align: center;">Direction : @Model.Direction</h5>
<h5 style="text-align: center; margin-bottom: 20px;">Player ...'s Turn</h5>
<div>
  <div style="display: flex; justify-content: space-between; margin-bottom: 40px;">
    <div>
      <h3>Say UNO :</h3>
      <button>
        <span>UNO!</span>
      </button>
    </div>
    <div>
      <h3>Deal Cards :</h3>
      <button>
        <span>@Model.InitialDiscardCard.CardColor</span> - <span>@Model.InitialDiscardCard.CardValue</span>
      </button>
      <button>
        <span>@Model.DiscardCardCount</span>
      </button>
    </div>
    <div>
      <h3>Stock Pile :</h3>
      <button>
        @Model.StockPileCount
      </button>
    </div>
  </div>
  <div style="display: flex; justify-content: space-between;">
    @foreach (var playerData in Model.PlayerDatas.Values)
    {
      <div>
        <h3>@playerData.Player.Name's Hand :</h3>
        <ul style="list-style-type: none; padding: 0;">
          @foreach (var card in playerData.CardsInHand)
          {
            <li style="margin-bottom: 3px;">
              <button>
                <span>@card.CardColor</span> - <span>@card.CardValue</span>
              </button>
            </li>
          }
        </ul>
      </div>
    }
  </div>
</div>